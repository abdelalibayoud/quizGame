<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Programming.ProgramgChooseActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorWarning">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back_Home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/baseline_arrow_circle_left_24"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="top|left"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background"
        android:padding="10dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:textSize="17sp"
            android:fontFamily="@font/bungee_inlin"
            android:textColor="@color/text_color"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="15dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/acount_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/java_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/java_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/php_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/php_background"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/java_script_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"

                        android:src="@drawable/javascript_background"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JavaScript"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/kotlin_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/kotlin_background"
                        android:padding="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kotlin"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:id="@+id/dart_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/dart_background"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dart"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/flutter_quiz"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/background_textview"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/flutter_background"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flutter"
                        android:textSize="17sp"
                        android:fontFamily="@font/bungee_inlin"
                        android:layout_margin="4dp"
                        android:textColor="@color/orange_text"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>